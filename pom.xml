    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.1.2</version>
        <relativePath/>
    </parent>

    <groupId>io.github.johnqxu</groupId>
    <artifactId>little-bee</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <java.version>17</java.version>
        <spring-native.version>0.12.1</spring-native.version>
        <javafx-sdk.version>21</javafx-sdk.version>
        <javafx-maven-plugin.version>0.0.5</javafx-maven-plugin.version>
        <commons-lang3.version>3.12.0</commons-lang3.version>
        <javafx-maven-plugin.version>0.0.5</javafx-maven-plugin.version>
        <commons-io.version>2.11.0</commons-io.version>
        <hibernate-types.version>2.21.1</hibernate-types.version>
        <hikari-cp.version>5.0.1</hikari-cp.version>
        <hsqldb.version>2.6.1</hsqldb.version>
        <lombok.version>1.18.24</lombok.version>
        <mapstruct.version>1.5.3.Final</mapstruct.version>
        <spring-native.version>0.12.1</spring-native.version>
        <easyexcel.version>3.3.2</easyexcel.version>
        <hsql.version>2.7.1</hsql.version>
        <jackson.version>2.14.0</jackson.version>
        <repackage.classifier/>
